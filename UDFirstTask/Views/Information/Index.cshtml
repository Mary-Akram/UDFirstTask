@model IEnumerable<UDFirstTask.DTOs.InformationDetailsDto>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<style>
    .card {
        transition: transform 0.2s, box-shadow 0.2s;
    }

        .card:hover {
            transform: translateY(-10px) scaleY(1.1);
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.2);
        }
</style>
<div class="row">
    @foreach (var item in Model)
    {
        <div class="card col-4 m-3" style="max-width: 300px;">
            <img class="card-img-top" src="~/@item.ImagePath" alt="Card image" style="max-height: 200px; object-fit: cover;">
            <div class="card-body">
                <h5 class="card-title">@item.EnglishTitle</h5>
               <a href="@Url.Action("ViewDetails", "Information", new { id = item.Id })" class="btn btn-primary">View Details</a>
            </div>
        </div>
    }
</div>

