
@model UDFirstTask.DTOs.InformationDetailsDto

<h2>Details</h2>
<div style="display: flex; justify-content: flex-start; align-items: flex-start;">
    <div style="flex: 1; margin-right: 20px;">
        <img src="~/@Model.ImagePath" alt="Image" style="max-width: 100%; max-height: 400px;" />
        <div style="display: flex; justify-content: center; align-items: center; gap: 20px;">
            <div style="flex: 1;">
                <h4>English Title: @Model.EnglishTitle</h4>
                <h5>English Description:</h5>
                <p> @Html.Raw(Model.EnglishDescription)</p>
            </div>
            <div style="flex: 1; text-align: right;">
                <h4> @Model.ArabicTitle : العنوان </h4>
                <h5>الوصف:</h5>
                <p>@Html.Raw(Model.EnglishDescription)</p>
            </div>
        </div>
        </div>
</div>

